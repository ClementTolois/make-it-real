{# Extends template base #}
{% extends "mir_public/base.html.twig" %}
{# add extra Seo, meta, links and scripts #}
{% block title %}{# Title of the page #}
Make it real | Log in
{% endblock %}
{% block metas %}{# Extra metas #}
{% endblock %}
{% block links %}{# Extra links #}
<link href="{{ asset('assets/css/mir_public/login.css') }}" rel="stylesheet">
{% endblock %}
{% block scripts %}{# Extra scripts #}
<script src="{{ asset('assets/js/mir_public/paroller.js') }}"></script>
<script src="{{ asset('assets/js/mir_public/mir_public.js') }}"></script>
{% endblock %}

{% block body %}
<section id="formSection" class="jumbotron" data-paroller-factor="0.5" data-paroller-factor-xs="0.5">
    <img src="{{ asset('assets/img/logo.png') }}" alt="mir_logo">
    <div id="formContainer" class="container p-5 rounded bg-light">
        <form method="post" class="container">
            <div class="row ml-1 mt-3 mb-3">
                <h1>Sign In !</h1>
            </div>
            {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="row mt-3 mb-3">
                <div class="col-sm-12">
                    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required
                        autofocus>
                </div>
            </div>
            <div class="row mt-3 mb-3">
                <div class="col-sm-12">
                    <input type="password" name="password" id="inputPassword" class="form-control"
                        placeholder="Password" required>
                </div>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

            <button class="btn btn-outline-danger" type="submit">
                Sign in
            </button>

            <div class="row mt-3 mb-3">
                <div class="col-sm-12">
                    <a href="{{ url('app_reset_pwd') }}" class="text-danger">I forgot my password</a>.
                </div>
            </div>
        </form>
    </div>
</section>
{% endblock %}